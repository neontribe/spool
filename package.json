{
  "name": "spool",
  "version": "1.0.0",
  "description": "Helping folk with learning disabilities get involved in policy consultations",
  "main": "src/server/index.js",
  "private": true,
  "scripts": {
    "test": "NODE_ENV=test nyc mocha .mocha_setup.js src/**/*-test.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "vulnerabilities": "snyk test",
    "start-ui": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9009",
    "build-storybook": "build-storybook",
    "start": "node src/server/index.js",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neontribe/spool.git"
  },
  "author": "Rupert Redington <rupert@neontribe.co.uk>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/neontribe/spool/issues"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.0.0",
    "babel-cli": "^6.11.4",
    "babel-plugin-istanbul": "^1.0.3",
    "chai": "^3.5.0",
    "coveralls": "^2.11.12",
    "enzyme": "^2.4.1",
    "eslint": "^3.2.2",
    "jsdom": "^9.4.1",
    "mocha": "^3.0.1",
    "nyc": "^7.1.0",
    "react-addons-test-utils": "^15.3.0",
    "react-scripts": "0.2.1",
    "snyk": "^1.17.5",
    "supertest": "^2.0.0"
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "express": "^4.14.0",
    "express-graphql": "^0.5.3",
    "graphql": "^0.6.2",
    "lodash": "^4.14.2",
    "react": "^15.2.1",
    "react-bootstrap": "^0.30.2",
    "react-dom": "^15.2.1",
    "sqlite3": "^3.1.4"
  },
  "eslintConfig": {
    "extends": "./node_modules/react-scripts/config/eslint.js",
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/*-test.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "cache": true
  },
  "babel": {
    "presets": ["es2015", "react"],
    "env": {
        "test": {
            "plugins": ["istanbul"]
        }
    }
  }
}
