{
  "name": "spool",
  "version": "1.0.0",
  "engines": {
    "node": "6.2.1",
    "npm": "3.9.3"
  },
  "description": "Helping folk with learning disabilities get involved in policy consultations",
  "main": "src/server/index.js",
  "private": true,
  "scripts": {
    "test": "NODE_ENV=test nyc mocha .mocha_setup.js src/**/*-test.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "vulnerabilities": "snyk test",
    "lint": "node_modules/react-scripts/node_modules/.bin/eslint .",
    "start-ui": "export $(cat .env | xargs) && react-scripts start",
    "build": "export $(cat .env | xargs) && react-scripts build && cp -r ./static/* ./build/static/",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9009 -s ./",
    "build-storybook": "build-storybook",
    "start": "node src/server/index.js",
    "start-dev": "export $(cat .env | xargs) && npm start",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neontribe/spool.git"
  },
  "author": "Rupert Redington <rupert@neontribe.co.uk>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/neontribe/spool/issues"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.0.0",
    "babel-cli": "^6.11.4",
    "babel-plugin-istanbul": "^1.1.0",
    "chai": "^3.5.0",
    "coveralls": "^2.11.12",
    "dotenv": "^2.0.0",
    "enzyme": "^2.4.1",
    "eslint": "^3.2.2",
    "jsdom": "^9.4.1",
    "mocha": "^3.0.1",
    "nyc": "^7.1.0",
    "react-addons-test-utils": "^15.3.0",
    "snyk": "^1.17.5",
    "supertest": "^2.0.0"
  },
  "dependencies": {
    "auth0-js": "^7.1.0",
    "bootstrap": "^3.3.7",
    "express": "^4.14.0",
    "express-graphql": "^0.5.3",
    "graphql": "^0.6.2",
    "graphql-relay": "^0.4.2",
    "jwt-decode": "^2.1.0",
    "lodash": "^4.14.2",
    "react": "^15.2.1",
    "react-bootstrap": "^0.30.2",
    "react-dom": "^15.2.1",
    "react-router": "^2.6.1",
    "react-scripts": "git+https://github.com/facebookincubator/create-react-app.git",
    "sqlite3": "^3.1.4"
  },
  "eslintConfig": {
    "extends": "./node_modules/react-scripts/config/eslint.js",
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/*-test.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "cache": true
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  }
}
