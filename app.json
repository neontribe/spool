{
    "name": "SPOOL",
    "description": "Helping folk with learning disabilities get heard by policy-makers",
    "repository": "https://github.com/neontribe/spool.git",
    "postdeploy": "npm run reset-database && npm run build-database && npm run seed-database",
    "env": {
        "AUTH0_DOMAIN": {
            "required": true
        },
        "AUTH0_CLIENT_ID": {
            "required": true
        },
        "PGSSLMODE": {
            "required": true
        },
        "NODE_ENV": "production"
    },
    "addons": [
        {
          "plan": "heroku-postgresql:hobby-dev",
          "as": "DATABASE"
        }
    ]
}
